}
<style>
    #morecasteModal a, #casteModal a {
        color: #c32143;
    }

        #morecasteModal a:hover, #casteModal a:hover {
            background-color: #de8312;
            color: #fff !important;
        }

    .modal-title {
        color: #FF007F;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("#casteModal").modal('show');
    });

    function SelectCaste(castename) {
        if (castename == "Maratha") {
            $("#casteModal").modal('hide');
        }
        else if (castename == "MORECASTE") {
            $("#casteModal").modal('hide');
            $("#morecasteModal").modal('show');
        }
        else {
            window.location.href = "/eCast/Home";
        }
    }

    function PrevCaste() {
        $("#casteModal").modal('show');
        $("#morecasteModal").modal('hide');

    }


</script>

